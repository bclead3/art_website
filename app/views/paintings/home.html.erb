<style>
body {
    color: #999999;
}
.home-page {
    position: relative;
    float: left;
}
.home-page a {
    color: #bbbbbb;
    text-decoration: none;
}
.home-page-background {
    margin: 200px 50px 0 50px;
    position: relative;
    float: left;
    width: 100%;
}
.home-page-background-text {
    position: relative;
    float: left;
    font-size: 1.5em;
    width: 40%;
    padding-right: 20px;
}

.home-page-background-image {
    float: left;
    width: 50%;
}

.home-page-background-image img {
    vertical-align: middle;
    width: 100%;
}

/* https://www.w3schools.com/css/tryit.asp?filename=trycss3_reflection_below */
.home-page-background-image {
    position: relative;
    background: url('/Media/Oceanside/Mendocino Coastline.jpg') bottom;
}
.home-page-background-image:after,
.home-page-background-image:before {
    content: '';
    position: absolute;
    display: block;
    width: 100%;
    height: 50%;
    bottom: -50%;
}
.home-page-background-image:after {
    background: inherit;
    transform: scaleY(-1);
}
.home-page-background-image:before {
    z-index: 1;
    background: linear-gradient(to bottom, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.9));
}

</style>

